<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<!-- Close Dialog -->
    <ImageView
        android:id="@+id/btn_filter_close"
        android:contentDescription="Close Filter Dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        app:srcCompat="@drawable/ic_baseline_close_24"
        android:layout_margin="5dp"/>

<!-- Search Filter Text -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEARCH FILTER"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_margin="10dp"/>

<!--    AND Filter Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/and_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="20dp"
        app:cardBackgroundColor="#6200ED"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_and_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/and_filter_expand_arrow"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="CONTAINS EACH"
                android:textAlignment="viewStart" />

            <ImageView
                android:id="@+id/and_filter_expand_arrow"
                android:contentDescription="Expand AND Filter Dialog"
                android:layout_width="40dp"
                android:layout_height="49dp"
                android:layout_alignParentEnd="true"

                app:srcCompat="@drawable/ic_baseline_expand_more_24" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/and_filter_chipGroup"
                style="@style/Widget.MaterialComponents.Chip.Entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_and_filter"
                android:background="#CCAEFB"
                android:paddingHorizontal="10dp">

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="chip1"
                    android:textSize="13sp"></com.google.android.material.chip.Chip>

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="chip2"
                    android:textSize="13sp"></com.google.android.material.chip.Chip>

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="chip3"
                    android:textSize="13sp"></com.google.android.material.chip.Chip>

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="chip4"
                    android:textSize="13sp"></com.google.android.material.chip.Chip>

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="chip5"
                    android:textSize="13sp"></com.google.android.material.chip.Chip>

            </com.google.android.material.chip.ChipGroup>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

<!--    OR Filter Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/or_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="20dp"
        app:cardBackgroundColor="#6200ED"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_or_filter"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:layout_toStartOf="@+id/or_filter_expand_arrow"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="CONTAINS"
                android:textAlignment="viewStart"/>

            <ImageView
                android:id="@+id/or_filter_expand_arrow"
                android:contentDescription="Expand OR Filter Dialog"
                android:layout_width="40dp"
                android:layout_height="49dp"
                android:layout_alignParentEnd="true"

                app:srcCompat="@drawable/ic_baseline_expand_more_24" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/or_filter_chipGroup"
                style="@style/Widget.MaterialComponents.Chip.Entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_or_filter"
                android:background="#CCAEFB"
                android:paddingHorizontal="10dp"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="chip6"
                    android:textSize="13sp"></com.google.android.material.chip.Chip>

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="chip7"
                    android:textSize="13sp"></com.google.android.material.chip.Chip>


            </com.google.android.material.chip.ChipGroup>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

<!--    NOT Filter Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/not_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="20dp"
        app:cardBackgroundColor="#6200ED"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_not_filter"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:layout_toStartOf="@+id/not_filter_expand_arrow"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="DOES NOT CONTAINS"
                android:textAlignment="viewStart"/>

            <ImageView
                android:id="@+id/not_filter_expand_arrow"
                android:contentDescription="Expand NOT Filter Dialog"
                android:layout_width="40dp"
                android:layout_height="49dp"
                android:layout_alignParentEnd="true"

                app:srcCompat="@drawable/ic_baseline_expand_more_24" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/not_filter_chipGroup"
                style="@style/Widget.MaterialComponents.Chip.Entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_not_filter"
                android:background="#CCAEFB"
                android:paddingHorizontal="10dp"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="chip8"
                    android:textSize="13sp"></com.google.android.material.chip.Chip>

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="chip9"
                    android:textSize="13sp"></com.google.android.material.chip.Chip>

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="chip10"
                    android:textSize="13sp"></com.google.android.material.chip.Chip>


            </com.google.android.material.chip.ChipGroup>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>